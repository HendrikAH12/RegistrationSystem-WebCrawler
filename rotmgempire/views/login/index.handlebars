{{>_nav}}
<div class="container mt-4" id="container">
    {{#each erros}}
        <div class="alert alert-danger">
            {{text}}
        </div>
    {{else}}
    {{/each}}
    {{#if error}}
        <div class="alert alert-danger">{{error}}</div>
    {{else}}
    {{/if}}

    <style>
        
        label{
            margin-top: 3px;
        }

        div#color{
            background-color: #303030;
            color: white;
        }

        div#margin{
            background-color: black;
        }

        div#msg{
            text-align: center;
        }

        div#msg a{
            background-color: #484848;
            color: rgb(228, 93, 172);
            font-size: 15pt;
        }

        div#container{
            padding-top: 1px;
        }

    </style>

    <div class="card mt-4" id="margin">
        <div class="card-body" id="color">
            <form action="/login" method="POST">
                <label for="username">Username: </label>
                    <input type="text" name="username" class="form-control" required>
                <label for="password">Password: </label>
                    <input type="password" name="password" class="form-control" required>
                <button type="submit" class="btn btn-success mt-3">Log In</button>
            </form>
        </div>
    </div>

    <div class="card-body" id="msg">
        <a href="/forgotpassword">Forgot the password?</a>
    </div>

</div>